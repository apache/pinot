<div class="container">
  <div class="row te-nav__row">
    {{#if isGlobalNav}}
      <div class="te-nav__logo">
        {{#link-to "index" class="te-nav__link te-nav__link--home"}}
          {{webappName}}
        {{/link-to}}
        <sup class="te-nav__beta-badge">(Beta)</sup>
      </div>
    {{/if}}

    <ul class="te-nav__list">
      {{#each navItems as |navItem|}}
        {{#unless navItem.hidden}}
          <li class="te-nav__item te-nav__item--{{navItem.className}}">
            {{#if navItem.isCustomLink}}
              <a class="te-nav__link nounderline" href="{{navItem.link}}">
                {{navItem.title}}
              </a>
            {{else if navItem.id}}
              {{#link-to navItem.link navItem.id class="te-nav__link"}}
                {{navItem.title}}
              {{/link-to}}
            {{else}}
              {{#link-to navItem.link class="te-nav__link"}}
                {{navItem.title}}
              {{/link-to}}
            {{/if}}
          </li>
        {{/unless}}
      {{/each}}
    </ul>

    {{#if isGlobalNav}}
       <div class="te-nav__user" role="menu">
        {{#link-to "self-serve.create-alert" tagName="button" type="button" class="te-nav__button"}}
          Create Alert
        {{/link-to}}
        {{!-- Hide until we have authentification  --}}
         {{!-- <div class="te-nav__user-dropdown">
          <a class="dropdown-toggle te-nav__dropdown-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <img src="/assets/images/default-avatar.png" alt="User Avatar" class="te-nav__user-avatar">
          </a> --}}
        <div class="te-nav__user-dropdown">
          <a {{action "onToggleExpanded"}} class="dropdown-toggle te-nav__dropdown-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" title="help center">
            <span class="te-nav__help-icon"><i class="te-icon glyphicon glyphicon-user"></i></span>
            <span><i class="te-icon glyphicon {{if isExpanded 'glyphicon-menu-up' 'glyphicon-menu-down'}}"></i> </span>
          </a>
          {{#if isExpanded}}
            <ul class="te-nav__dropdown-wrapper">
              <li class="te-nav__dropdown-item"><a href="mailto:ask_thirdeye@linkedin.com?Subject=TE-Feedback" target="_blank">Submit Feedback</a></li>
              <li class="te-nav__dropdown-item"><a href="http://go/thirdeye-help">Help page</a></li>
              <div class="te-nav__dropdown-divider"></div>
              <li class="te-nav__dropdown-item">
                {{#link-to "logout"}}
                  Logout<br />
                  {{username}}
                {{/link-to}}
              </li>
            </ul>
          {{/if}}
        </div>
      </div>
    {{/if}}
  </div>
</div>
