<div class="range-pill-selectors__title">{{title}}</div>
<div class="range-pill-selectors__list">
  {{#power-select
      triggerId=triggerId
      triggerClass=triggerClass
      options=fixedTimeRangeOptions
      searchEnabled=false
      matchTriggerWidth=false
      matchContentWidth=true
      placeholder=placeholder
      selected=selectedRange
      onchange=(action "onRangeOptionClick")
      as |range|
    }}
      {{range.name}}
    {{/power-select}}
  {{#if isCustomRange}}
    <div class="range-pill-selectors__custom {{if customRange.isActive "range-pill-selectors__custom--active"}}" {{action "onRangeOptionClick" customRange}} data-value={{customRange.value}}>
      Custom
      : {{date-range-picker
          class=inputClassName
          timePicker=true
          timePicker24Hour=true
          timePickerIncrement=timePickerIncrement
          maxDate=maxTime
          start=activeRangeStart
          end=activeRangeEnd
          ranges=predefinedRanges
          showCustomRangeLabel=false
          alwaysShowCalendars=true
          format=uiDateFormat
          serverFormat=serverFormat
          open="left"
          applyAction=(action "onRangeSelection")
        }}
    </div>
  {{/if}}
</div>
